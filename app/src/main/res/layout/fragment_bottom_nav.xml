<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".BottomNav">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_icon_background"
            android:src="@drawable/find_icon"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main" />

        <TextView
            android:id="@+id/findText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardmedium"
            android:paddingBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="물건 찾기"
            android:textSize="14sp"
            android:textColor="@color/nav_text"
            app:layout_constraintEnd_toEndOf="@id/find"
            app:layout_constraintStart_toStartOf="@id/find"
            app:layout_constraintTop_toBottomOf="@+id/find" />

        <ImageButton
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_icon_background_colored"
            android:src="@drawable/home_icon"
            android:layout_marginTop="5dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardmedium"
            android:paddingBottom="5dp"
            android:text="메인"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/nav_text"
            app:layout_constraintEnd_toEndOf="@id/main"
            app:layout_constraintStart_toStartOf="@id/main"
            app:layout_constraintTop_toBottomOf="@+id/main" />

        <ImageButton
            android:id="@+id/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/write_icon"
            android:background="@drawable/nav_icon_background"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/main"/>

        <TextView
            android:id="@+id/writeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardmedium"
            android:paddingBottom="5dp"
            android:text="글쓰기"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/nav_text"
            app:layout_constraintEnd_toEndOf="@id/write"
            app:layout_constraintStart_toStartOf="@id/write"
            app:layout_constraintTop_toBottomOf="@+id/write" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>